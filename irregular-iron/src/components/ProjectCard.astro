---
const { image, title, description, codeLink, pageLink } = Astro.props;
---
<div class="relative flex flex-col border-4 border-teal-800 rounded-lg p-6 shadow-md bg-transparent h-auto hover:shadow-xl transition-shadow duration-300 sm:p-3 mb-6 group overflow-hidden">
  <h3 class="text-lg sm:text-xl font-bold text-center mb-4">{title}</h3>

  <div class="relative flex flex-col sm:flex-row sm:items-center sm:gap-4"> 
    <div class="flex justify-center sm:justify-center w-full relative overflow-hidden">
        <img src={image} alt={title} class="w-[250px] h-[250px] rounded-lg object-cover sm:w-[180px] sm:h-[180px] md:w-[220px] md:h-[220px] lg:w-[280px] lg:h-[280px] hover:opacity-80 transition-opacity duration-300" />

        <img src="/fotos/sh.png" alt="Shuriken"
          class="absolute w-20 h-20 opacity-0 left-[-120px] top-[50%] -translate-y-1/2 rotate-0 
                 transition-all duration-500 ease-out group-hover:opacity-100 
                 group-hover:left-[150px] group-hover:rotate-[1080deg]" />

        <img src="/fotos/grieta.png" alt="Grieta"
          class="absolute w-14 h-14 opacity-0 left-[170px] top-[55%] -translate-y-1/2 scale-50 
                 transition-opacity duration-300 ease-out 
                 group-hover:opacity-100 group-hover:scale-100 group-hover:delay-500" />
    </div>
    
    <div class="flex flex-col sm:w-full relative">
      <p class="text-xs sm:text-sm lg:text-base text-center sm:text-left">{description}</p>

      <div class="flex flex-col gap-2 mt-4 sm:hidden">
        <a href={codeLink} target="_blank"
          class="text-white bg-gray-600 text-xs px-3 py-1 rounded text-center hover:bg-green-700 active:bg-green-900">
          C칩digo
        </a>

        <a href={pageLink} target="_blank"
          class="text-white bg-gray-600 text-xs px-3 py-1 rounded text-center hover:bg-green-700 active:bg-green-900">
          P치gina
        </a>
      </div>

      <div class="hidden sm:flex flex-row gap-4 mt-4 w-full justify-center">
        <div class="relative flex items-center">
          <img src="/fotos/sh.png" alt="Shuriken"
            class="w-8 h-8 opacity-0 -translate-x-4 rotate-0 transition-all duration-500 ease-out group-hover:opacity-100 group-hover:translate-x-0 group-hover:rotate-[1080deg]" />
          <a href={codeLink} target="_blank"
            class="text-white bg-gray-600 text-sm px-4 py-2 rounded text-center hover:bg-green-700 active:bg-green-900">
            C칩digo
          </a>
        </div>

        <div class="relative flex items-center">
          <img src="/fotos/sh.png" alt="Shuriken"
            class="w-8 h-8 opacity-0 -translate-x-4 rotate-0 transition-all duration-500 ease-out group-hover:opacity-100 group-hover:translate-x-0 group-hover:rotate-[1080deg]" />
          <a href={pageLink} target="_blank"
            class="text-white bg-gray-600 text-sm px-4 py-2 rounded text-center hover:bg-green-700 active:bg-green-900">
            P치gina
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
